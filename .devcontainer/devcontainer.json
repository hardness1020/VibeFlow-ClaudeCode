{
  "name": "Claude Code Dev Container",
  "dockerFile": "Dockerfile",
  "context": ".",
  "mounts": [
    // Mount your project code inside container
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],
  "workspaceFolder": "/workspace",
  "extensions": [
    // Optional: list of VSCode extensions you want inside container
    "Anthropic.claude-code"  // if such exists; adjust depending on extension name
  ],
  "settings": {
    // Any VSCode settings you want in the container
  },
  "postCreateCommand": "claude --version"  // e.g. verify installation
}
